{
  "publisher": "tejanium",
  "name": "branch-review",
  "displayName": "Branch Review",
  "description": "GitHub-style pull request review workflow for local development with AI feedback integration.",
  "icon": "img/ico.png",
  "version": "0.3.0",
  "homepage": "https://github.com/tejanium/vscode-branch-review/blob/master/README.md",
  "bugs": {
    "url": "https://github.com/tejanium/vscode-branch-review/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tejanium/vscode-branch-review"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:branchReview.startReview"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "branchReview.startReview",
        "title": "Start Branch Review",
        "category": "Branch Review"
      },
      {
        "command": "branchReview.submitComments",
        "title": "Copy Review Comments to Clipboard",
        "category": "Branch Review"
      },
      {
        "command": "branchReview.clearComments",
        "title": "Clear All Comments",
        "category": "Branch Review"
      },
      {
        "command": "branchReview.debugComments",
        "title": "Debug Stored Comments",
        "category": "Branch Review"
      }
    ],
    "keybindings": [
      {
        "command": "branchReview.startReview",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "branchReview.startReview"
        },
        {
          "command": "branchReview.submitComments"
        },
        {
          "command": "branchReview.clearComments"
        },
        {
          "command": "branchReview.debugComments"
        }
      ]
    },
    "configuration": {
      "title": "Branch Review",
      "properties": {
        "branchReview.prompt.header": {
          "type": "string",
          "default": "# Code Review Feedback\n\nI have reviewed the changes in this branch and have the following feedback:",
          "markdownDescription": "Text that appears at the beginning of your review prompt. Supports markdown formatting.",
          "order": 1
        },
        "branchReview.prompt.footer": {
          "type": "string",
          "default": "---\n\nPlease address these review comments and make the necessary changes. Once you've made the fixes, please commit the changes with an appropriate commit message. Let me know when you're done and I can review the updates.",
          "markdownDescription": "Text that appears at the end of your review prompt. Supports markdown formatting.",
          "order": 2
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "mkdir -p out/webview && cp src/webview/* out/webview/ && tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "clean-build": "npm run compile && rm -f *.vsix && npx @vscode/vsce package"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/prismjs": "^1.26.5",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "prismjs": "^1.29.0",
    "simple-git": "^3.19.1"
  }
}
